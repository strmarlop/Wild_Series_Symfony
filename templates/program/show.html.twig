{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>
	</div>

	{#affichage punt 2 #}
	{% for season as program.seasons %}
		<h2>{{ loop.index }}/<a href="{{ path("program_", { seasonId: season.id }) }}">{{ season.number }}</a>
		</h2>
	{% endfor %}


	<a href="{{ path('program_index') }}">Retour à la liste des programmes</a>
	<br>
	<a href="{{ path('category_index') }}">Retour à la liste de categories</a>
{% endblock %}
