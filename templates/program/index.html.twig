{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	{# {{ app.session.get('total') }}   total est la valeur de la clé $total du controller, donc on montre les données de la session #}

	<h1>
		Toutes les séries de la table program :
	</h1>

	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button>Search</button>
	{{ form_end(form) }}

	{% for program in programs %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ program.title }}
				- Catégorie :
				{{ program.category.name }}
			</h2>
			<p>
				{{ program.synopsis }}
			</p>
			{# Lien vers la fiche de la série : #}
			<a href="{{ path("program_show", { slug_program: program.slug }) }}">
				Voir la fiche</a>
			{#id es como está escrito en el parametro de show en ProgramController#}
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}

	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
